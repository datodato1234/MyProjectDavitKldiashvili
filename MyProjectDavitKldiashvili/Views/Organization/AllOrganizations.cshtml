
@model IEnumerable<MyProjectDavitKldiashvili.Models.OrganizationModel>

@{
    ViewData["Title"] = "All Organizations";
}

<div class="text-center">
    <h1 class="display-4">All Organizations</h1>
</div>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Organization List</h2>
        </div>
          <div class="col-6 text-end">
            <a asp-controller="Organization" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Add New Organization
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
        <tr>
            <th>
                 Id
            </th>
            <th>
                 Name
            </th>
            <th>
                 Adress
            </th>
            <th>
                 ParentOrganization
            </th>
            <th>Commands </th>

        </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Id
                </td>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.Adress
                </td>
                <td width="40%">
                    @obj.ParentOrganization
                </td>
                 <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Organization" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Organization" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
