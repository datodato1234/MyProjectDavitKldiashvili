@model MyProjectDavitKldiashvili.Models.OrganizationModel


<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Organization</h2>
			<hr />
		</div>
        <div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
        <div class="mb-3">
            <label asp-for="Adress"></label>
            <input asp-for="Adress" class="form-control" />
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ParentOrganization"></label>
            <input asp-for="ParentOrganization" class="form-control" />
            <span asp-validation-for="ParentOrganization" class="text-danger"></span>
        </div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Organization" asp-action="AllOrganizations" class="btn btn-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>